<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph.xml"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.templatesampleapp.ui.fragments.home.HomeFragment"
        android:label="Quotes Home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/authorFragment"
        android:name="com.example.templatesampleapp.ui.fragments.author.AuthorFragment"
        android:label="Quotes Author"
        tools:layout="@layout/fragment_author" />
    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.example.templatesampleapp.ui.fragments.category.CategoryFragment"
        android:label="Quotes Category"
        tools:layout="@layout/fragment_category" />
    <fragment
        android:id="@+id/gridFragment"
        android:name="com.example.templatesampleapp.ui.fragments.quotesgrid.GridFragment"
        android:label="Category List"
        tools:layout="@layout/fragment_grid">
        <argument
            android:name="ShowAppBar"
            android:defaultValue="false"
            app:argType="boolean" />
        <argument
            android:name="isFromRemote"
            app:argType="boolean" />
        <argument
            android:name="toptitle"
            app:argType="string" />
        <argument
            android:name="currentTypeId"
            app:argType="string" />
    </fragment>
    <action
        android:id="@+id/action_global_gridFragment"
        app:destination="@id/gridFragment"
        app:enterAnim="@anim/enter_from_right"
        app:exitAnim="@anim/exit_to_left"
        app:popEnterAnim="@anim/enter_from_left"
        app:popExitAnim="@anim/exit_to_right" />
    <fragment
        android:id="@+id/quoteSliderFragment"
        android:name="com.example.templatesampleapp.ui.fragments.sliderfragment.QuoteSliderFragment"
        android:label="Quotes"
        tools:layout="@layout/fragment_quoteslider">
        <argument
            android:name="toptitle"
            app:argType="string" />
        <argument
            android:name="index"
            app:argType="integer" />
        <argument
            android:name="ShowAppBar"
            android:defaultValue="false"
            app:argType="boolean" />
    </fragment>
    <action
        android:id="@+id/action_global_quoteSliderFragment"
        app:destination="@id/quoteSliderFragment"
        app:enterAnim="@anim/enter_from_right"
        app:exitAnim="@anim/exit_to_left"
        app:popEnterAnim="@anim/enter_from_left"
        app:popExitAnim="@anim/exit_to_right"/>
    <fragment
        android:id="@+id/favourateFragment"
        tools:layout="@layout/fragment_favourate"
        android:name="com.example.templatesampleapp.ui.fragments.favourate.FavourateFragment"
        android:label="Favourite Quotes" />
</navigation>