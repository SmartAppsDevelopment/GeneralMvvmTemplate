<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TemplateSampleApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Change Overflow Menu ListView Item Height & Property -->

        <item name="popupMenuBackground">@color/main200</item>
        <item name="textAppearanceSubtitle1">@style/popumenuapperatn</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="weight400" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/urbanist_regular</item>
    </style>
    <style name="weight500" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/urbanist_medium</item>
    </style>
    <style name="weight600" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/urbanist_semibold</item>
    </style>
    <style name="weight700" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/urbanist_bold</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="weight700toolbar" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/urbanist_semibold</item>
        <item name="android:textSize">@dimen/_15ssp</item>
    </style>
    <style name="popumenuapperatn" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/urbanist_semibold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/main900</item>
    </style>

</resources>