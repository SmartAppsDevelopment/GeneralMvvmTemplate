<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.example.templatesampleapp.model.ui.UiQuoteModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_margin="@dimen/_4sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvcontainer"
            app:cardBackgroundColor="@color/componentbg"
            android:clickable="true"
            app:cardCornerRadius="@dimen/_4sdp"
            app:cardElevation="@dimen/_9sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/refbgview"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:alpha="0.1"
                    android:background="#536DFE"
                    app:layout_constraintStart_toStartOf="@id/iv_categoryimg"
                    app:layout_constraintEnd_toEndOf="@id/iv_categoryimg"
                    app:layout_constraintTop_toTopOf="@id/iv_categoryimg"
                    app:layout_constraintBottom_toBottomOf="@id/iv_categoryimg"/>
                <ImageView
                    android:id="@+id/iv_categoryimg"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_width="@dimen/_58sdp"
                    android:layout_height="@dimen/_58sdp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:alpha="0.8"
                    android:padding="@dimen/_12sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />


                <TextView
                    android:id="@+id/txt_category_name"
                    android:textAppearance="@style/weight600"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:text="@{model.quote}"
                    tools:text="sldfkjsdlkfjsdlkfsdjf"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13ssp"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintBottom_toBottomOf="@id/iv_categoryimg"
                    app:layout_constraintStart_toEndOf="@id/iv_categoryimg"
                    app:layout_constraintTop_toTopOf="@id/iv_categoryimg"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/txt_quotes_count"
                    android:textAppearance="@style/weight400"
                    android:layout_width="0dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:text="@{model.category}"
                    tools:text="sldfkjsdlkfjsdlkfsdjf"
                    android:textColor="@color/main300"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/txt_category_name"
                    app:layout_constraintTop_toBottomOf="@id/txt_category_name"

                    android:textSize="@dimen/_12ssp" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>