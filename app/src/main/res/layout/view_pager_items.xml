<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:ignore="NamespaceTypo">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_8sdp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:elevation="@dimen/_2sdp"
        android:gravity="center"
        android:orientation="vertical"
        app1:cardBackgroundColor="@color/white"
        app1:cardCornerRadius="@dimen/_8sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_view_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/txt_banner_quote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/_20sdp"
                android:autoSizeMaxTextSize="@dimen/_30ssp"
                android:autoSizeMinTextSize="@dimen/_14ssp"
                android:ellipsize="end"
                android:fontFamily="@font/lato_medium"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/_3sdp"
                android:text="Moral"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp"
                app:autoSizeTextType="uniform" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/right_side_corner"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txt_quote_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:fontFamily="@font/lato_medium"
                    android:gravity="center_vertical"
                    android:text="Quote of day "
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />
            </RelativeLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>